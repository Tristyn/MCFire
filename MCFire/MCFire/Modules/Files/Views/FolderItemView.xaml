        <Path Visibility="{Binding DoesntExist, Converter={StaticResource VisibilityConverter}}" Height="10" Fill="Red" Stretch="Uniform" Data="{StaticResource IconWarning}" Margin="2,0" IsHitTestVisible="False"/>
